@using GridMvc.Html
@model List<SistemaDeVendas.Aplicacao.Dto.ProdutoDto>
@{
    ViewBag.Title = "Produto";
}

<div class="page-header">
    <div class="btn-toolbar pull-right">
        <a href="@Url.Action("Cadastrar")"
           class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span>Novo</a>
    </div>
    <h3>@ViewBag.Title</h3>
</div>
<div class="code-cut">  
    @Html.Grid(Model).Columns(columns =>
    {
        columns.Add(c => c.Id).Titled("Código").Filterable(true);
        columns.Add(c => c.Descricao).Titled("Descrição").Filterable(true);
        columns.Add(c => c.UnidadeMedida).Titled("Unid. Medida").Filterable(true);
        columns.Add(c => c.ValorUnidade).Titled("Valor da Unidade").Filterable(true);
        columns.Add()
            .Encoded(false)
            .Sanitized(false)
            .SetWidth(30)
            .RenderValueAs(o => Html.ActionLink("Editar", "Atualizar", new { id = o.Id }));
        columns.Add()
            .Encoded(false)
            .Sanitized(false)
            .SetWidth(30)
            .RenderValueAs(o => Html.ActionLink("Remover", "Remover", new { id = o.Id }));

    }).WithPaging(10).Sortable(true)  
</div>  